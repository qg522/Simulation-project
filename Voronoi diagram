%%% Part1 %%%
Lambda = 40;  % Lambda:poisson(Lambda)
u = unifrnd(0,1);
M = 0;
while u >= exp(-Lambda)
    u = u*unifrnd(0,1);
    M=M+1;
end 

%%% Part2 %%%
a = 0; c = 0;
b = 100; d =100;
Nall = M;
% A = [];
% B = [];
while M > 0         %scatter in the [0,100]*[0,100]
    M = M-1;
    u1 = unifrnd(0,1);
    A(Nall-M) = (b-a)*u1;
    u2 = unifrnd(0,1);
    B(Nall-M) = (d-c)*u2;
    plot(A(Nall-M),B(Nall-M),'r^')
    hold on
end

voronoi(A',B','--');
